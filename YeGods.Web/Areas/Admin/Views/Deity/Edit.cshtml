@using YeGods.Common.Enums
@model YeGods.ViewModels.DeityUpdateViewModel

@{
  Layout = "_AdminLayout";
}

@section Styles
  {
  <link href="~/lib/simplemde/dist/simplemde.min.css" rel="stylesheet" type="text/css" />
}


<form asp-area="Admin" asp-controller="Deity" asp-action="Edit" method="post" role="form">
  <input type="hidden" asp-for="Id" />

  <div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Aliases"></label>
    <input asp-for="Aliases" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Origin"></label>
    <input asp-for="Origin" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Sex"></label>
    <select asp-for="Sex"
            asp-items="Html.GetEnumSelectList<Sex>()"
            class="form-control">
      <option>Select the sex</option>
    </select>
  </div>
  <div class="form-group">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control" id="deity-description"></textarea>
  </div>
  <div class="form-group">
    <label asp-for="CategoryId"></label>
    <select asp-for="CategoryId"
            asp-items="@(new SelectList(Model.Categories, "Value", "Text"))"
            class="form-control">
      <option>Select a Category</option>
    </select>
  </div>
  <input type="submit" value="Update Deity" class="btn btn-primary pull-right" />
  <a asp-area="Admin" asp-controller="Deity" asp-action="Page" class="btn btn-default pull-right">Cancel</a>
</form>


@section Scripts
  {
  <script src="~/lib/simplemde/dist/simplemde.min.js"></script>
  <script src="~/js/edit-deity.min.js"></script>
}


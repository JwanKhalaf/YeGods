@model YeGods.ViewModels.CategoryCreateViewModel

@{
  Layout = "_AdminLayout";
}

<h1>Add New Category</h1>

<div class="row">
  <div class="col-md-12">
    <form asp-area="Admin" asp-controller="Category" asp-action="Create" method="post" role="form">
      <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Name of new category" />
      </div>
      <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId"
                asp-items="@(new SelectList(Model.Categories, "Value", "Text"))"
                class="form-control">
          <option value="0">Select a Category</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
      <a asp-area="Admin" asp-controller="Category" asp-action="Page">Cancel</a>
    </form>
  </div>
</div>
